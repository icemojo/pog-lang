count :: (n) {
	print "Counting down from " + n + "...";

	total := 0;
	if n < 0 {
		print "Nothing to count!";
	}

	for ; n >= 0;; {
		print n;
		n = n - 1;
		total = total + 1;
	}
	return total;
}

